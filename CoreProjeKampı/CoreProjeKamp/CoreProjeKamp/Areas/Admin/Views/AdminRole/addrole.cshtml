@model CoreProjeKamp.Models.RoleViewModel
@{
    ViewData["Title"] = "addrole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5 style="color:red">Rol Ekleme Sayfası </h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <div class="col-sm-12 b-r">
                        <form method="post">
                            <div style="margin-top:8px">
                                <label>Rol Adı:</label>
                                @Html.TextBoxFor(x => x.name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x=>x.name,"",new{@class="text-primary"})
                            </div>
                            <button style="margin-top:10px" class="btn btn-success">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

