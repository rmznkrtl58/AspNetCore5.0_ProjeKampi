@model List<EntityLayer.Concrete.AppRole>
@*AppRole tabloma bağlı listeleme yapıyorum*@
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Roller</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Rol adı</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                            <th>Ekle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.Id</td>
                                <td>@x.Name</td>
                                <td><a href="/Admin/AdminRole/deleterole/@x.Id" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Admin/AdminRole/editrole/@x.Id" class="btn btn-outline-warning">Düzenle</a></td>
                                <td><a href="/Admin/AdminRole/addrole/@x.Id" class="btn btn-outline-success">Ekle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Admin/AdminRole/userrolelist/" class="btn btn-outline-success">Kullanıcı Rollerine Atama</a>
            </div>
        </div>
    </div>
</div>





