@model EntityLayer.Concrete.Comment
@{
    ViewData["Title"] = "editcomment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5 style="color:blue">Yorum Güncelleme Sayfası </h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <div class="col-sm-12 b-r">
                        <form method="post">
                            @Html.HiddenFor(x=>x.CommentId)
                            @Html.HiddenFor(x => x.CommentMail)
                            @Html.HiddenFor(x => x.BlogId)
                            @Html.HiddenFor(x => x.BlogRating)
                            <div style="margin-top:8px">
                                <label>Blog Adı:</label>
                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                            </div>
                            <div style="margin-top:8px">
                                <label>Resim Url:</label>
                                @Html.TextAreaFor(x => x.CommentContent, new { @class = "form-control",@rows=3 })
                            </div>
                            <button style="margin-top:10px" class="btn btn-success">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



