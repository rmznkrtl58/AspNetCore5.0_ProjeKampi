@using EntityLayer.Concrete
@using X.PagedList.Mvc.Core;
@using X.PagedList
@model IPagedList<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Yorumlar</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Blog</th>
                            <th>E-posta</th>
                            <th>Tarih</th>
                            <th>Verilen Puan</th>
                            <th>Durum</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var x in Model){
                        <tr>
                                <td>@x.UserName</td>
                                <td>@x.Blog.BlogTitle</td>
                                <td>@x.CommentMail</td>
                                <td>@x.CommentDate</td>
                                <td>@x.BlogRating</td>
                                <td>@x.CommentStatus</td>
                                <td><a href="/Admin/Comment/deletecomment/@x.CommentId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Admin/Comment/editcomment/@x.CommentId" class="btn btn-outline-warning">İçerik</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager((IPagedList<Comment>)Model, page => Url.Action("Index", new { page }))
                </div>
        </div>
    </div>
</div>



