@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Blog Postları</h3>
		<div class="inner-sec">
			<!--left-->
			<div class="left-blog-info-w3layouts-agileits text-left">
				<div class="row">
					@foreach(var x in Model){
					<div class="col-lg-4 card">
						<a href="single.html">
							<img src="@x.BlogThumbnailImage" class="card-img-top img-fluid" alt="" style="height:250px;width:600px">
						</a>
						<div class="card-body">
							<ul class="blog-icons my-4">
								<li>
									<a href="#">
										<i class="far fa-calendar-alt"></i> @Convert.ToDateTime(x.BlogDate).ToString("dd/MMM/yyyy")
									</a>
								</li>
								<li class="mx-2">
									<a href="#">
										<i class="far fa-comment"></i> 0
									</a>
								</li>
								<li>
									<a href="#">
										<i class="fas fa-eye"></i> @x.Category.CategoryName
									</a>
								</li>
							</ul>
							<h5 class="card-title" >
									<a href="/Blog/BlogReadAll/@x.BlogId/">@x.BlogTitle</a>
							</h5>
								<p class="card-text mb-3">@x.BlogContent.Substring(0, x.BlogContent.Substring(0, 130).LastIndexOf(" "))<a href="#"><span style="color:red">.....</span></a></p>
								<a href="/Blog/BlogReadAll/@x.BlogId/" class="btn btn-primary read-m">Devamını Oku</a>
						</div>
					</div>
					}
				</div>
				<!--//left-->
			</div>
		</div>
	</div>
</section>


