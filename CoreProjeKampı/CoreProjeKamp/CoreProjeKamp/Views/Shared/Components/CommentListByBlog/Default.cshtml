@model IEnumerable<EntityLayer.Concrete.Comment>
@{
	string text = " "; 
}
<div class="comment-top">
	<h4>Yorumlar</h4>
	@foreach(var x in Model){
		if(Model.Count()==0)@*MODELE BAĞLI OLAN YORUMLAR YOKSA SAYILMAMIŞSA YOKTUR OZMN AŞAĞIYI GERÇEKLEŞTİR*@
		{
			text = "İlk Yorumu Yapınız";
		}
		else
		{
			text = x.CommentContent;
		}
		<div class="media">
			<img src="https://i.hizliresim.com/lt6p4my.png" alt="" class="img-fluid" />
		<div class="media-body">
			<h5 class="mt-0">@x.UserName</h5>
			<p>
					 @text
			</p>
		</div>
	</div>
	}
</div>
