@using EntityLayer.Concrete
@model List<Writer>
@foreach(var x in Model)
{
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Hakkında</h4>
                <div class="d-flex mt-5 align-items-top">
                    <img src="@x.WriterImage" class="img-sm rounded-circle mr-3" alt="image">
                    <div class="mb-0 flex-grow">
                        <h5 class="mr-2 mb-2">@x.WriterName</h5>
                        <p class="mb-0 font-weight-light">@x.WriterAbout</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}