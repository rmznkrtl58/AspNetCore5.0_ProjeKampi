@using EntityLayer.Concrete
@model List<Blog>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son Yayınlanan 5 Blog</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Resim </th>
                                <th> Blog Başlık </th>
                                <th> Kategori </th>
                                <th> Eklenme Tarihi </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var x in Model){
                            <tr>
                                <td>
                                    <img src="@x.BlogThumbnailImage" class="mr-2" alt="image"> 
                                </td>
                                    <td> @x.BlogTitle </td>
                                <td>
                                    <label class="badge badge-gradient-success">@x.Category.CategoryName</label>
                                </td>
                                <td> @(((DateTime)x.BlogDate).ToString("dd/MM/yyyy")) </td>
                                <td> <a href="/Blog/BlogReadAll/@x.BlogId" class="btn btn-dark">Detaylar</a></td>
                           
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>